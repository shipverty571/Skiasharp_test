<Window
    x:Class="skiasharp_test_app.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:skiasharp_test_app"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:skia="clr-namespace:SkiaSharp.Views.WPF;assembly=SkiaSharp.Views.WPF"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.1*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <skia:SKElement
            Grid.Row="0"
            Grid.Column="1"
            Name="Canvas"
            MouseLeftButtonDown="Canvas_OnMouseLeftButtonDown"
            MouseLeftButtonUp="Canvas_OnMouseLeftButtonUp"
            MouseMove="Canvas_OnMouseMove"
            PaintSurface="Canvas_OnPaintSurface"/>
        <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Vertical">
            <Button Content="Resistor" Command="{Binding AddResistorCommand}"/>
        </StackPanel>
    </Grid>
</Window>
